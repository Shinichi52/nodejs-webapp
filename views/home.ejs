<!DOCTYPE html>
<html lang="en">

<head>

	<% include partials/head.ejs %>

</head>

<body>

	<% include partials/header.ejs %>

		<div id="hero-image">
			<h1 id="hero-title">
				<%= title %>
			</h1>
		</div>

		<div id="posters-wrapper" class="content-padding clearfix">
			<% for (var i=0; i < books.length; i++) { %>
				<div class="poster">

					<a href="/book_id/<%= books[i].id %>">
						<img src="/images/<%= books[i].poster %>" class="img-responsive cover-image">

						<div class="poster-info-overlay">
							<h3>
								<%= books[i].name %>
							</h3>
							<h4>View more
								<i class="fa fa-arrow-right"></i>
							</h4>
						</div>
					</a>
				</div>
				<% } %>
		</div>

		<div id="pagination">
			<% for (var i=1; i <= pageCount; i++) { %>
				<% if (i === page) { %>
					<a href="/page/<%= i %>" class="page-link active-page">
						<%= i %>
					</a>
					<% } else { %>
						<a href="/page/<%= i %>" class="page-link">
							<%= i %>
						</a>
						<% } %>
							<% } %>
		</div>

		<% include partials/footer.ejs %>

			<% include partials/scripts.ejs %>
</body>

</html>